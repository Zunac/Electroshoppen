            <Label layoutX="20.0" text="Don't have a profile?" textFill="#006dff" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label text="Forgot your password?" textFill="#006dff" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="TOP">
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
         </children>
      </GridPane>
   </children>
